{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "links": {
      "type": "object",
      "properties": {
        "current": {
          "type": "object",
          "properties": {
            "count": {
              "type": "integer"
            },
            "page": {
              "type": "integer"
            },
            "sort_by": {
              "type": "string"
            },
            "sort": {
              "type": "string"
            }
          },
          "required": [
            "count",
            "page",
            "sort_by",
            "sort"
          ]
        },
        "first": {
          "type": "object",
          "properties": {
            "count": {
              "type": "integer"
            },
            "page": {
              "type": "integer"
            },
            "sort_by": {
              "type": "string"
            },
            "sort": {
              "type": "string"
            }
          },
          "required": [
            "count",
            "page",
            "sort_by",
            "sort"
          ]
        },
        "prev": {
          "type": "null"
        },
        "next": {
          "type": "null"
        },
        "last": {
          "type": "object",
          "properties": {
            "count": {
              "type": "integer"
            },
            "page": {
              "type": "integer"
            },
            "sort_by": {
              "type": "string"
            },
            "sort": {
              "type": "string"
            }
          },
          "required": [
            "count",
            "page",
            "sort_by",
            "sort"
          ]
        }
      },
      "required": [
        "current",
        "first",
        "prev",
        "next",
        "last"
      ]
    },
    "count": {
      "type": "integer"
    },
    "products": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "category_id": {
              "type": "integer"
            },
            "id": {
              "type": "integer"
            },
            "image": {
                "type":["array","null","string"]
            },
            "image_thumbs": {
              "oneOf": [
                {"type":"array"},
                {"type":"null" }
              ]
            },
            "name": {
              "type": "string"
            },
            "price": {
              "type": "number"
            },
            "original_price": {
              "type": "number"
            },
            "currency_symbol": {
              "type": "string"
            },
            "is_virtual": {
              "type": "boolean"
            },
            "has_required_options": {
              "type": "boolean"
            },
            "maximum_qty": {
              "type": "integer"
            },
            "assets": {
              "type": "array",
              "items": {}
            }
          },
          "required": [
            "category_id",
            "id",
            "image",
            "image_thumbs",
            "name",
            "price",
            "original_price",
            "currency_symbol",
            "is_virtual",
            "has_required_options",
            "maximum_qty",
            "assets"
          ]
        }
      ]
    },
    "total": {
      "type": "integer"
    }
  },
  "required": [
    "links",
    "count",
    "products",
    "total"
  ]
}